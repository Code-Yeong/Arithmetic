<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.arithmetic_master.view.ClassMateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mate_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/backtomain" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="同年级小朋友"
            android:textSize="45px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="2dp">

        <TextView
            android:id="@+id/mate_id"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="序号" />

        <TextView
            android:id="@+id/mate_loginname"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="学号" />

        <TextView
            android:id="@+id/mate_name"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="姓名" />

        <TextView
            android:id="@+id/mate_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="最高得分" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_mate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

    </ListView>
</LinearLayout>
