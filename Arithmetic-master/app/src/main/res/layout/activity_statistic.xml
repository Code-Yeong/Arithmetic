<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.administrator.arithmetic_master.view.StatisticActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/sta_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backtomain"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="45px"
            android:text="数据统计"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:background="#8ecdea"
        android:layout_marginTop="10dp"
        android:padding="3dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sta_rate"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_textview"
            android:textSize="26px"
            android:padding="2dp"
            android:gravity="center"
            android:text="暂无数据"/>
        <TextView
            android:id="@+id/sta_count"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_textview"
            android:gravity="center"
            android:padding="2dp"
            android:textSize="26px"
            android:text="暂无数据"/>
        <TextView
            android:id="@+id/sta_score"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_textview"
            android:gravity="center"
            android:padding="2dp"
            android:textSize="26px"
            android:text="暂无数据"/>
    </LinearLayout>
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:background="#8ecdea"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
</LinearLayout>
